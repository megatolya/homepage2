{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "browser": true,
        "amd": false,
        "mocha": false,
        "jasmine": false,
        "es6": true
    },
    "rules": {
        "no-empty": 0,
        "no-console": 0,
        "indent": [2, 4],
        "strict": [0],
        "comma-dangle": [2, "never"],
        "no-plusplus": [0],
        "no-underscore-dangle": [0],
        "func-names": [2, "never"],
        "no-param-reassign": [0],
        "no-return-assign": [0],
        "object-curly-spacing": [2, "never"],
        "no-mixed-operators": [0]
    }
}
